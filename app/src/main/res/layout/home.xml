<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity"
    android:name="com.design.layout.HomeActivityFragment"
    android:id="@+id/home_browse_fragment"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#673AB7"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#673AB7"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            >

            <include
                layout="@layout/menu_template"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                ></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#FF9800"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#C2185B"
                >

            </ImageView>


        </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#AFB42B"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/test">

                    <TextView
                        android:id="@+id/tv_long"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Long string" >
                    </TextView>

                    <Button
                        android:id="@+id/btn_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View" >
                    </Button>
                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    </RelativeLayout>

</fragment>
